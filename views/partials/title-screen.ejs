<div id="title-screen">
    <div id="game-logo">
        <img
            src="/image/game-logo.gif"
            class="game-logo-image"
            id="#game-logo-image"/>
    </div>
    <div id="title-screen-options">
        <p
            hx-get="/start" 
            hx-swap="outerHTML" 
            hx-target="#title-screen"
            class="transition"
            hx-trigger="triggerClick throttle:0.5s"
            hx-on:click="window.interactivity.clickBus(event)">
            New Game
        </p>
        <p class="disabled">Load Game</p>
        <p>Settings</p>
        <p>Quit</p>
    </div>
    <div id="basemat">
        <img
            src="/image/title-screen-bg.gif"
            class="base-image"
            id="#basemat-title-screen"/>
      </div>
</div>