<polygon
width="1280"
height="720"
points="<%= coords.toString() %>"
filter="url(#f1)"
hx-get="/<%= triggerScript %>"
hx-target="#<%= triggerTarget %>"
hx-swap="<%= swap ? swap : 'innerHtml' %>"
class="<%= show ? 'revealed' : '' %> <%= showInDark ? 'show-dark' : '' %> cursor-<%= cursor ? cursor : 'default' %>"
data-sound="<%= soundEffect ? JSON.stringify(soundEffect) : 'null' %>"
hx-trigger="triggerClick"
hx-on:click="window.interactivity.clickBus(event)"
/>